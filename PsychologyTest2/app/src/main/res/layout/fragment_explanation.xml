<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ehdrmfqoddl"
    tools:context=".ExplanationFragment">

    <ImageButton
        android:id="@+id/nextButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right"
        android:background="@android:color/transparent"
        android:layout_gravity="center|bottom|right"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="130dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="369dp"
        android:layout_height="381dp"
        android:layout_gravity="center"
        android:src="@drawable/image" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:text="There were favorite flowers\nin the flower base\nAs time goes, the flowers\nhave all withered.\nWhat are you going to do with that?"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:textSize="24sp" />
</FrameLayout>