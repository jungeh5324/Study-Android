<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6E6"
    tools:context=".SelectionFragment">


    <ImageButton
        android:id="@+id/selecte1"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="110dp"
        android:src="@drawable/box3" />

    <ImageButton
        android:id="@+id/selecte2"
        android:background="@android:color/transparent"
        android:layout_gravity="center|top"
        android:layout_marginTop="252dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/box3" />

    <ImageButton
        android:id="@+id/selecte3"
        android:background="@android:color/transparent"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="252dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/box3" />

    <ImageButton
        android:id="@+id/selecte4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="110dp"
        android:src="@drawable/box3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:textSize="25sp"
        android:layout_marginTop="157dp"
        android:text="1. Throw it away." />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:textSize="25sp"
        android:layout_marginTop="298dp"
        android:text="2. Water the flowers." />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="298dp"
        android:textSize="25sp"
        android:text="3. Cut it off with sissors." />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="158dp"
        android:textSize="25sp"
        android:text="4. Make them as dried flower." />


</FrameLayout>